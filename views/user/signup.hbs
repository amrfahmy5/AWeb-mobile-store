<div class="col-md-5 offset-md-5" style="margin-top: 50px;">
  <div class="card text-white bg-dark  mb-3" style="max-width: 8rem;">

    <div class="card-body">
      <h5 class="card-title">Sign Up</h5>

    </div>

  </div>

</div>

<form style="margin-top: 50px;" method="POST" action="/users/signup" class="col-md-4 offset-md-4">

  {{#each errors}}
  <div class="alert alert-primary " style="max-width:500px" role="alert">
    <p>{{this.msg}}</p>
  </div>
  {{/each}}

  {{#if errord}}
   <div class="alert alert-primary " style="max-width:500px" role="alert">
    <p>{{errord}}</p>
  </div>
{{/if}}
  <div class="form-group">
    <br><br>
    <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      placeholder="User Name">
  </div>
  </div>
  <div class="form-group">
    <br><br>
    <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      placeholder="Enter email">
  </div>
  <div class="form-group">
    <br><br>
    <input type="password" name="pw1" class="form-control" id="exampleInputPassword1" placeholder="Password">
  </div>
  <div class="form-group">
    <br><br>
    <input type="password" name="pw2" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password">
  </div>
  <br><br>
  <input type="hidden" name="_csrf"value={{token}}>
  <button type="submit" class="btn btn-primary">sign up</button>

</form>